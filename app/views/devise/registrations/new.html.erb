<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h2 class="mb-4 text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :full_name, class: "form-label" %>
          <%= f.text_field :full_name, class: "form-control form-control-sm", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :region_id, class: "form-label" %>
          <%= f.number_field :region_id, class: "form-control form-control-sm", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <em class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", required: true %>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign up", class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
