<table class="table table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Content</th>
    <th>Author</th>
    <th>Region</th>
    <th>Attachments</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% posts.each do |post| %>
    <tr>
      <td><%= post.content.truncate(50) %></td>
      <td><%= post.user.full_name %></td>
      <td><%= post.region_id %></td>
      <td>
        <%= render 'post_attachments', post: post %>
      </td>
      <td>
        <%= render 'post_actions', post: post, is_admin: is_admin %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
