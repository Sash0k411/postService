<h1>Users</h1>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Email</th>
    <th>Full Name</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.full_name %></td>
      <td><%= user.role.capitalize %></td>
      <td>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        <% if user.admin? %>
          <span class="badge bg-success">Admin</span>
        <% else %>
          <%= button_to 'Make Admin', make_admin_user_path(user), method: :patch, class: 'btn btn-primary btn-sm' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
